@model Avondspel.Portal.Models.LoginViewModel

<div class="card w-100">
    <div class="card-header">
        <h1>Login</h1>
    </div>
    <div class="card-body">
        <form asp-action="Login" asp-controller="Home" method="post">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label class="form-label" asp-for="Email"></label>
                <div><span asp-validation-for="Email" class="text-danger"></span></div>
                <input class="form-control" asp-for="Email" />
            </div>
            <div class="form-group mb-3">
                <label class="form-label" asp-for="Password"></label>
                <div><span asp-validation-for="Password" class="text-danger"></span></div>
                <input class="form-control" asp-for="Password" />
            </div>
            <div class="row">
                <div class="col align-self-start">
                    <button class="btn btn-primary" type="submit">Login</button>
                </div>
                <div class="col-auto">
                    <a asp-action="Registreren" asp-controller="Home" class="btn btn-primary ">Maak een account aan</a>
                </div>
            </div>
        </form>
    </div>
</div>
