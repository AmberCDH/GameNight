@model IEnumerable<Avondspel.Domain.BordspellenAvond>

@{
    ViewData["Title"] = "BordspellenAvondGebruiker";
}
<!DOCTYPE html>
<html>
<div class="container">
<h1>BordspellenAvonden van Jou</h1>

<a asp-action="Create">
    <button type="button" class="btn btn-primary btn-lg mb-3">Maak een BordspellenAvond aan</button>
</a>


    <div class="row">
        @if (Model.Any())
        {
            @foreach (var item in Model)
            {
                <div class="col-lg-3 mb-4">
                    <partial name="_Avonden" model="item" />
                </div>
            }
        }
        else
        {
            <partial name="_ErrorLijstLeeg" />
        }

        <a asp-action="Index" asp-controller="BordspellenAvond">alle avonden</a>
    </div>
</div>
</html>